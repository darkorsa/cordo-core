{
    "name": "darkorsa/cordo-core",
    "description": "Core libraries for Cordo microframework",
    "license": "MIT",
    "require": {
        "beberlei/assert": "^2.6",
        "bshaffer/oauth2-server-php": "^1.10",
        "composer/composer": "^2.0.13",
        "doctrine/collections": "^1.6",
        "doctrine/dbal": "^2.12",
        "doctrine/orm": "^2.8",
        "doctrine/persistence": "^2.1",
        "filp/whoops": "^2.3",
        "guzzlehttp/psr7": "^1.5",
        "hassankhan/config": "^3.0",
        "illuminate/database": "^9.0",
        "illuminate/events": "^9.0",
        "illuminate/filesystem": "^9.0",
        "illuminate/queue": "^9.0",
        "illuminate/redis": "^9.0",
        "laminas/laminas-mail": "^2.10",
        "laminas/laminas-permissions-acl": "^2.5",
        "laminas/laminas-servicemanager": "^3.4",
        "league/fractal": "^0.17.0",
        "league/plates": "^3.3",
        "league/tactician": "^1.0",
        "league/tactician-command-events": "^0.6.0",
        "league/tactician-container": "^2.0",
        "league/tactician-doctrine": "^1.1",
        "league/tactician-logger": "^0.10.0",
        "monolog/monolog": "^1.24",
        "myclabs/php-enum": "^1.7",
        "nette/php-generator": "^3.3",
        "nikic/fast-route": "^1.3",
        "particle/validator": "^2.3",
        "php-di/php-di": "^6.0",
        "psr/http-server-middleware": "^1.0",
        "ramsey/uuid": "^4.2",
        "ramsey/uuid-doctrine": "^1.5",
        "relay/relay": "2.x@dev",
        "rollbar/rollbar": "^2.1",
        "symfony/cache": "^5.3",
        "symfony/console": "~6.0.0",
        "symfony/property-access": "^5.1",
        "symfony/translation": "^5.0",
        "symfony/yaml": "^5.0",
        "tuupola/cors-middleware": "^1.2",
        "vlucas/phpdotenv": "^5.3"
    },
    "require-dev": {
        "nunomaduro/phpinsights": "dev-master",
        "pestphp/pest": "^1.18",
        "pestphp/pest-plugin-faker": "^1.0",
        "phpstan/phpstan": "^1.8",
        "symfony/var-dumper": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Cordo\\Core\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage pest --coverage",
        "analyse": "phpstan analyse -l 5 -c phpstan.neon src tests",
        "insights": "phpinsights -v",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src/",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src/"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        }
    }
}
